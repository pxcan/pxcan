{
  "name": "pxcan",
  "version": "0.0.2",
  "description": "ESM-ready pixel library",
  "keywords": [
    "pixel",
    "retro",
    "canvas",
    "sprite",
    "recolor",
    "palette"
  ],
  "homepage": "https://github.com/shamblesides/pxcan",
  "bugs": "https://github.com/shamblesides/pxcan/issues",
  "license": "MIT",
  "author": "Nigel Nelson",

  "files": [
    "src"
  ],
  "browser": "src/pxcan.js",
  "directories": {
    "lib": "src",
    "example": "example"
  },

  "sideEffects": false,

  "repository": {
    "type": "git",
    "url": "git+https://github.com/shamblesides/pxcan.git"
  },

  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s start:prod || npm run -s start:dev",
    "start:dev": "webpack-dev-server --mode=development --host=0.0.0.0 --open --devtool=source-map",
    "start:prod": "webpack-dev-server --mode=production --host=0.0.0.0",
    "build": "webpack --mode=production --devtool=source-map",
    "build:rollup": "rm -rf dist/* && rollup -c",
    "lint": "eslint ."
  },

  "browserslist": [
    "last 2 versions and not dead and > 0.5% in US",
    "not ie 11",
    "ios >=9.3"
  ],

  "eslintConfig": {
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "browser": true
    }
  },
  "eslintIgnore": [
    "dist/*",
    "webpack.config.js"
  ],

  "dependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.3.4",
    "babel-loader": "^8.0.2",
    "clean-webpack-plugin": "^2.0.0",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "rollup": "^1.11.2",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-terser": "^4.0.4",
    "rollup-plugin-url": "^2.2.1",
    "stats-webpack-plugin": "^0.7.0",
    "url-loader": "^1.1.1",
    "webpack": "^4.18.0",
    "webpack-cli": "^3.1.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^4.5.0",
    "if-env": "^1.0.0",
    "webpack-dev-server": "^3.2.1"
  }
}
